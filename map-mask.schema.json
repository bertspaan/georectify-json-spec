{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bertspaan.nl/georectify-json-spec/map-mask.schema.json",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://geojson.org/schema/Feature.json"
    }
  ],
  "properties": {
    "properties": {
      "type": "object",
      "properties": {
        "sources": {
          "type": "array",
          "items": {
            "$ref": "../georectify-json-spec.schema.json#/definitions/coordinate"
          }
        },
        "area": {
          "type": "number",
          "description": "Area depicted by map in square meters"
        }
      }
    },
    "geometry": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Polygon"
          ]
        }
      }
    }
  }
}